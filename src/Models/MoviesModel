// This Parse model interacts with the movies database and returns some information relating to it that can be used by the components
import Parse from 'parse'

//Creating the movie class based on the movie collumn in back4app
const movie=Parse.Object.extend("Movie")

//Addinng ability to search through the movies based on user search
export async function searchMovies(searchTerm) {
    const query=new Parse.Query(Movie);
    query.matches("title", searchTerm, "i");
    query.ascending("title");
    // if the movie is available in the data display info
    try {
        const results =await query.find();
        return results.map(movie => ({
            id:movie.id,
            title: movie.get("title"),
            year:movie.get("year"),
            genre:movie.get("genre"),
        }))
    }
    catch(error) {
        console.error("Error! Movie not available", error);
    }
}